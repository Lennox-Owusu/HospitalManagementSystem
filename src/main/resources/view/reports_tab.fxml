<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.amalitech.hospitalmanagementsystem.controller.ReportsController">

    <!-- Top toolbar -->
    <top>
        <ToolBar>
            <Label text="Hospital Analytics" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Refresh" onAction="#refreshReports"/>
        </ToolBar>
    </top>

    <!-- Charts area -->
    <center>
        <VBox spacing="18">
            <children>

                <!-- Row 1: existing charts -->
                <HBox spacing="20">
                    <children>
                        <PieChart fx:id="chartPatientsByGender" title="Patients by Gender" prefWidth="420"/>
                        <BarChart fx:id="chartDoctorsPerDept" title="Doctors per Department" prefWidth="520">
                            <xAxis>
                                <CategoryAxis label="Department"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Number of Doctors"/>
                            </yAxis>
                        </BarChart>
                    </children>
                </HBox>

                <!-- Row 2: existing appointments trend + NEW feedback ratings -->
                <HBox spacing="20">
                    <children>
                        <LineChart fx:id="chartAppointmentsTrend" title="Appointments Trend">
                            <xAxis>
                                <CategoryAxis label="Date"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Appointments"/>
                            </yAxis>
                        </LineChart>

                        <!-- NEW: Feedback Ratings Distribution -->
                        <PieChart fx:id="chartFeedbackRatings" title="Feedback Ratings (1â€“5)" prefWidth="420"/>
                    </children>
                </HBox>

                <!-- Row 3: NEW inventory analytics -->
                <HBox spacing="20">
                    <children>
                        <!-- NEW: Low stock by category -->
                        <BarChart fx:id="chartLowStockByCategory" title="Inventory Below Reorder by Category" prefWidth="520">
                            <xAxis>
                                <CategoryAxis label="Category"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Items Below Reorder"/>
                            </yAxis>
                        </BarChart>

                        <!-- NEW: Top N low-stock items -->
                        <BarChart fx:id="chartTopLowStockItems" title="Top Low-Stock Items (Deficit to Reorder)" prefWidth="520">
                            <xAxis>
                                <CategoryAxis label="Item"/>
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="Units Needed to reach Reorder"/>
                            </yAxis>
                        </BarChart>
                    </children>
                </HBox>
            </children>

            <!-- VBox padding -->
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </center>

    <!-- BorderPane padding -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
