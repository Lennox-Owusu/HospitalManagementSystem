<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.amalitech.hospitalmanagementsystem.controller.AdminPanelController">

    <top>
        <Label text="Admin Dashboard" styleClass="heading" />
    </top>

    <center>
        <VBox spacing="15">

            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <HBox spacing="20">
                <VBox spacing="8">
                    <Label fx:id="lblNotesQueryMs" text="Notes Query: -- ms"/>
                    <Label fx:id="lblPatientCount" text="Patients: 0"/>
                    <Label fx:id="lblDoctorCount" text="Doctors: 0"/>
                    <Label fx:id="lblDeptCount" text="Departments: 0"/>
                    <Label fx:id="lblPatientQueryMs" text="Patient Query: 0 ms"/>
                    <Label fx:id="lblDoctorQueryMs" text="Doctor Query: 0 ms"/>
                    <Label fx:id="lblMemory" text="Memory Usage: 0 MB"/>
                    <Label fx:id="lblThreads" text="Active Threads: 0"/>
                    <Label fx:id="lblLastRefresh" text="Last Refresh: --"/>
                    <Label fx:id="lblAppointmentQueryMs" text="Appointment Query: 0 ms"/>
                    <Label fx:id="lblPrescriptionQueryMs" text="Prescription Query: 0 ms"/>
                    <Label fx:id="lblInventoryQueryMs" text="Inventory Query: 0 ms"/>
                    <Button text="Refresh Now" onAction="#refreshAll"/>

                </VBox>

                <VBox spacing="10">
                    <PieChart fx:id="chartPatientsByGender" title="Patients by Gender" prefWidth="320"/>
                    <BarChart fx:id="chartDoctorsPerDept" title="Doctors per Department" prefWidth="460">
                        <xAxis>
                            <CategoryAxis label="Department"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Count"/>
                        </yAxis>
                    </BarChart>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
