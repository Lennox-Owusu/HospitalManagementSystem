<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.amalitech.hospitalmanagementsystem.controller.MainDashboardController">

    <!-- Top toolbar -->
    <top>
        <ToolBar>
            <Label text="Hospital Management System" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="PatientManagement"    onAction="#switchToPatients"/>
            <Button text="DoctorManagement"     onAction="#switchToDoctors"/>
            <Button text="DepartmentManagement" onAction="#switchToDepartments"/>
            <Button text="AppointmentManagement" onAction="#switchToAppointments"/>
        </ToolBar>
    </top>

    <!-- Center TabPane -->
    <center>
        <TabPane fx:id="tabPane">
            <Tab text="Patients" closable="false">
                <fx:include source="patient_table.fxml"/>
            </Tab>

            <Tab text="Doctors" closable="false">
                <fx:include source="doctor_table.fxml"/>
            </Tab>

            <Tab text="Departments" closable="false">
                <fx:include source="department_table.fxml"/>
            </Tab>

            <Tab text="Appointments" closable="false">
                <BorderPane>
                    <center>
                        <fx:include source="appointment_table.fxml"/>
                    </center>
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </BorderPane>
            </Tab>

            <!-- Reports tab -->
            <Tab text="Reports" closable="false">
                <fx:include source="reports_tab.fxml"/>
            </Tab>

            <!-- Inside TabPane tabs -->
            <Tab text="Prescriptions" closable="false">
                <fx:include source="prescription_table.fxml"/>
            </Tab>

            <Tab text="Feedback" closable="false">
                <fx:include source="feedback_table.fxml"/>
            </Tab>

            <Tab text="Inventory" closable="false">
                <fx:include source="inventory_table.fxml"/>
            </Tab>
            <Tab text="Overview" closable="false">
                <fx:include source="overview_dashboard.fxml"/>
            </Tab>

        </TabPane>
    </center>

    <!-- BorderPane padding -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>
