<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<DialogPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.amalitech.hospitalmanagementsystem.controller.PrescriptionFormController">

    <content>
        <VBox spacing="10">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="70"/>
                </columnConstraints>

                <Label text="Patient:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="patientBox" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Doctor:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="doctorBox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Notes:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="notesArea" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="4"/>
            </GridPane>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>

    <headerText>Prescription</headerText>
</DialogPane>
